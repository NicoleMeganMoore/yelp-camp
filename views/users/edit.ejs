<% include ../partials/header %>

<div class="row">
    <h1 style="text-align:center">Edit Profile</h1>
    <div style="width: 50%; margin: 35px auto;">
        <form action="/users/<%= user._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="user[firstName]">First Name</label>
                <input class="form-control" type="text" name="user[firstName]" value="<%= user.firstName %>" placeholder="John">
            </div>
            <div class="form-group">
                <label for="user[lastName]">Last Name</label>
                <input class="form-control" type="text" name="user[lastName]" value="<%= user.lastName %>" placeholder="Doe">
            </div>
            <div class="form-group">
                <label for="user[avatar]">Avatar Image URL</label>
                <input class="form-control" type="text" name="user[avatar]" value="<%= user.avatar %>" placeholder="https://www.google.com">
            </div>
            <% if(user.isAdmin === false){ %>
                <div class="form-group">
                    <input type="checkbox" name="admin" onclick="dynInput(this);">
                        <span id="adminlabel">Request Admin Access</span>
                    </input>
                    <div>
                        <p id="insertinputs"></p>
                    </div>
                </div>
            <% } %>
            <div class="form-group">
                <input class="btn btn-lg btn-default btn-block btn-primary" type="submit">
            </div>
        </form>
        <a href="/users/<%= user._id %>">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>