<% include ../partials/header %>

<div class="row">
    <h1 style="text-align:center">Create a New Campground</h1>
    <div style="width: 50%; margin: 35px auto;">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="name">Campground Name</label>
                <input class="form-control" type="text" name="name" placeholder="Yosemite Valley Campground">
            </div>
            <div class="form-group">
                <label for="price">Price per Night</label>
                <input class="form-control currency" type="number" name="price" placeholder="$10.50" min="0.00" step="0.01" required>
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
            </div>
            <div class="form-group">
                <label for="image">Image URL</label>
                <input class="form-control" type="text" name="image" placeholder="http://www.google.com">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control" name="description"></textarea>
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-default btn-block btn-primary" type="submit">
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>