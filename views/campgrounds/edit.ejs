<% include ../partials/header %>

<div class="row">
    <h1 style="text-align:center">Edit <%= campground.name %></h1>
    <div style="width: 50%; margin: 35px auto;">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="name">Campground Name</label>
                <input class="form-control" type="text" name="name" value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <label for="price">Price per Night</label>
                <input class="form-control currency" type="number" name="price" value=<%= campground.price %> min="0.00" step="0.01" required>
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
            </div>
            <div class="form-group">
                <label for="image">Image URL</label>
                <input class="form-control" type="text" name="image" value="<%= campground.image %>">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control" name="description"><%= campground.description %></textarea>
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-default btn-block btn-primary" type="submit">
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>