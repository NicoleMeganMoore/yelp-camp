<% include ../partials/header %>

<div class="row">
    <h1 style="text-align:center">Add New Comment to <%= campground.name %></h1>
    <div style="width: 30%; margin: 35px auto;">
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
                <textarea class="form-control" name="comment[text]" placeholder="your comment"></textarea>
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-default btn-block btn-primary" type="submit">
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>