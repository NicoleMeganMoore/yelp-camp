<% include ../partials/header %>

<div class="row">
    <h1 style="text-align:center">Edit Comment</h1>
    <div style="width: 30%; margin: 35px auto;">
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <textarea class="form-control" name="comment[text]"><%= comment.text %></textarea>
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-default btn-block btn-primary" type="submit">
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>